@page "/text/manipulation/replaceall"

<PageTitle>Textify - Manipulation - Replace All - Aptivi Project Demos</PageTitle>

@using System.Threading;
@using System.Net;
@using System.Text;
@using System.IO
@using System.Text.Json
@using Demos.Data
@using Textify.General
@inject NavigationManager NavManager

<Hero Title="Textify - Manipulation - Replace All">
	You can demonstrate a feature from Textify where we showcase the text casing feature,
	and we provide the API documentation here for future reference. This demonstrates the
	"Replace All" feature.
</Hero>
<BrandedBorder>
	<p>Enter some text: <InputText @bind-Value="Input"></InputText></p>
	<p>Enter replacement source(s): <InputText @bind-Value="Sources"></InputText></p>
	<p>Enter replacement target: <InputText @bind-Value="Target"></InputText></p>
	<p>Result from <code>ReplaceAll()</code>: @Result</p>
	<div class="d-grid gap-2 d-sm-flex">
		<button class="btn btn-primary btn-lg" type="button" @onclick="@ClickEvents[0]">Process</button>
		<button class="btn btn-primary btn-lg" type="button" @onclick="@ClickEvents[1]">API Reference</button>
	</div>
</BrandedBorder>

@code {
	public string Input { get; set; } = "Whatever, it is bad, ugly, and insufferable!";
	public string Sources { get; set; } = "bad|ugly|insufferable";
	public string Target { get; set; } = "awesome";
	public string Result { get; set; }
	public EventCallback[] ClickEvents => [
		EventCallback.Factory.Create(this, ProcessInput),
		EventCallback.Factory.Create(this, new Action(() => NavManager.NavigateTo("https://aptivi.github.io/Textify/api/Textify.General.TextTools.html#Textify_General_TextTools_ReplaceAll_System_String_System_String___System_String_"))),
	];

	public void ProcessInput()
	{
		string[] sources = Sources.Split("|");
		Result = $"{(Input ?? "").ReplaceAll(sources, Target)}";
	}
}
