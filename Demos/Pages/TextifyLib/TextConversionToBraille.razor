@page "/text/conversion/tobraille"

<PageTitle>Textify - Conversion - To Braille - Aptivi Project Demos</PageTitle>

@using System.Threading;
@using System.Net;
@using System.Text;
@using System.IO
@using System.Text.Json
@using Demos.Data
@using Textify.Accessibility
@inject NavigationManager NavManager

<Hero Title="Textify - Conversion - To Braille">
	You can demonstrate a feature from Textify where we showcase the text casing feature,
	and we provide the API documentation here for future reference. This demonstrates the
	"Convert text to Braille" feature.
</Hero>
<BrandedBorder>
	<p>Enter some text: <InputText @bind-Value="Input"></InputText></p>
	<p>Result from <code>ToBraille()</code>: @Result</p>
	<div class="d-grid gap-2 d-sm-flex">
		<button class="btn btn-primary btn-lg" type="button" @onclick="@ClickEvents[0]">Convert</button>
		<button class="btn btn-primary btn-lg" type="button" @onclick="@ClickEvents[1]">API Reference</button>
	</div>
</BrandedBorder>

@code {
	public string Input { get; set; } = "Terminaux is powerful!";
	public string Result { get; set; }
	public EventCallback[] ClickEvents => [
		EventCallback.Factory.Create(this, ProcessInput),
		EventCallback.Factory.Create(this, new Action(() => NavManager.NavigateTo("https://aptivi.github.io/Textify/api/Textify.Accessibility.BrailleBuilder.html#Textify_Accessibility_BrailleBuilder_ToBraille_System_String_"))),
	];

	public void ProcessInput()
	{
		Result = BrailleBuilder.ToBraille(Input ?? "");
	}
}
