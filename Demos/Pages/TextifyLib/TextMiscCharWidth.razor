@page "/text/misc/charwidth"

<PageTitle>Textify - Misc - Character Width - Aptivi Project Demos</PageTitle>

@using System.Threading;
@using System.Net;
@using System.Text;
@using System.IO
@using System.Text.Json
@using Demos.Data
@using Textify.General
@inject NavigationManager NavManager

<Hero Title="Textify - Misc - Character Width">
	You can demonstrate a feature from Textify where we showcase the text casing feature,
	and we provide the API documentation here for future reference. This demonstrates the
	"Get Character Width" feature.
</Hero>
<BrandedBorder>
	<p>Enter character(s): <InputText @bind-Value="Input"></InputText></p>
	<p>Results from <code>GetCharWidth()</code> and <code>GetCharWidthType()</code></p>
	@if (Results is not null)
	{
		<table class="table">
			<thead>
				<tr>
					<th scope="col">Character</th>
					<th scope="col">Width</th>
					<th scope="col">Type</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var result in Results)
				{
					<tr>
						<td>@result.Character</td>
						<td>@result.Width</td>
						<td>[@((int)result.Type)] @result.Type</td>
					</tr>
				}
			</tbody>
		</table>
	}
	<div class="d-grid gap-2 d-sm-flex">
		<button class="btn btn-primary btn-lg" type="button" @onclick="@ClickEvents[0]">Analyze</button>
		<button class="btn btn-primary btn-lg" type="button" @onclick="@ClickEvents[1]">API Reference</button>
		<button class="btn btn-primary btn-lg" type="button" @onclick="@ClickEvents[2]">API Reference</button>
	</div>
</BrandedBorder>

@code {
	public string Input { get; set; } = "こんにちは、Nitrocid！";
	public List<CharWidthInfo> Results { get; set; }
	public EventCallback[] ClickEvents => [
		EventCallback.Factory.Create(this, ProcessInput),
		EventCallback.Factory.Create(this, new Action(() => NavManager.NavigateTo("https://aptivi.github.io/Textify/api/Textify.General.TextTools.html#Textify_General_TextTools_GetCharWidth_System_Int32_"))),
		EventCallback.Factory.Create(this, new Action(() => NavManager.NavigateTo("https://aptivi.github.io/Textify/api/Textify.General.TextTools.html#Textify_General_TextTools_GetCharWidthType_System_Int32_"))),
	];

	public void ProcessInput()
	{
		Results = new();
		foreach (char inputChar in Input)
		{
			int width = TextTools.GetCharWidth(inputChar);
			var widthType = TextTools.GetCharWidthType(inputChar);
			var charWidthInfo = new CharWidthInfo(inputChar, width, widthType);
			Results.Add(charWidthInfo);
		}
	}
}
