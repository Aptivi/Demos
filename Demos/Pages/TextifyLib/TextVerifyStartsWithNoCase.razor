@page "/text/verify/startswithnocase"

<PageTitle>Textify - Verification - Starts With (Case-insensitive) - Aptivi Project Demos</PageTitle>

@using System.Threading;
@using System.Net;
@using System.Text;
@using System.IO
@using System.Text.Json
@using Demos.Data
@using Textify.General
@inject NavigationManager NavManager

<Hero Title="Textify - Verification - Starts With (Case-insensitive)">
	You can demonstrate a feature from Textify where we showcase the text casing feature,
	and we provide the API documentation here for future reference. This demonstrates the
	"Starts with + no case sensitivity" feature.
</Hero>
<BrandedBorder>
	<p>Enter some text: <InputText @bind-Value="Input"></InputText></p>
	<p>Enter part of text: <InputText @bind-Value="Part"></InputText></p>
	<label>
		String comparison method: <InputSelect @bind-Value="Comparison">
			@for (int i = 0; i < Comparisons.Length; i++)
			{
				var comparisonName = Comparisons[i];
				@if (comparisonName.ToString().Contains("IgnoreCase"))
				{
					<option value=@comparisonName>@comparisonName</option>
				}
			}
		</InputSelect>
	</label>
    <p>Result from <code>StartsWithNoCase()</code>: @Result</p>
    @if (Errored)
    {
        <p>Error obtaining results: @ErrorReason</p>
    }
	<div class="d-grid gap-2 d-sm-flex">
		<button class="btn btn-primary btn-lg" type="button" @onclick="@ClickEvents[0]">Test condition</button>
		<button class="btn btn-primary btn-lg" type="button" @onclick="@ClickEvents[1]">API Reference</button>
	</div>
</BrandedBorder>

@code {
	public StringComparison[] Comparisons = Enum.GetValues<StringComparison>();
	public string Input { get; set; } = "Can you believe that Nitrocid is awesome and powerful?";
	public string Part { get; set; } = "CAN YOU";
    public StringComparison Comparison { get; set; } = StringComparison.CurrentCultureIgnoreCase;
    public bool Errored { get; set; } = false;
    public string ErrorReason { get; set; } = "";
	public string Result { get; set; }
	public EventCallback[] ClickEvents => [
		EventCallback.Factory.Create(this, ProcessInput),
		EventCallback.Factory.Create(this, new Action(() => NavManager.NavigateTo("https://aptivi.github.io/Textify/api/Textify.General.TextTools.html#Textify_General_TextTools_StartsWithNoCase_System_String_System_String_System_StringComparison_"))),
	];

	public void ProcessInput()
    {
        try
        {
            Errored = false;
            Result = $"{(Input ?? "").StartsWithNoCase(Part, Comparison)}";
        }
        catch (Exception ex)
        {
            Errored = true;
            ErrorReason = ex.Message;
        }
	}
}
