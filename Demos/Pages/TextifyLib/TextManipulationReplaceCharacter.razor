@page "/text/manipulation/replacechar"

<PageTitle>Textify - Manipulation - Replace Character - Aptivi Project Demos</PageTitle>

@using System.Threading;
@using System.Net;
@using System.Text;
@using System.IO
@using System.Text.Json
@using Demos.Data
@using Textify.General
@inject NavigationManager NavManager

<Hero Title="Textify - Manipulation - Replace Character">
	You can demonstrate a feature from Textify where we showcase the text casing feature,
	and we provide the API documentation here for future reference. This demonstrates the
	"Replace Character" feature.
</Hero>
<BrandedBorder>
	<p>Enter some text: <InputText @bind-Value="Input"></InputText></p>
	<p>Enter replacement char index: <InputNumber @bind-Value="Source"></InputNumber></p>
	<p>Enter replacement target: <InputText @bind-Value="Target"></InputText></p>
	<p>Result from <code>ReplaceChar()</code>: @Result</p>
    @if (Errored)
    {
        <p>Error obtaining results: @ErrorReason</p>
    }
	<div class="d-grid gap-2 d-sm-flex">
		<button class="btn btn-primary btn-lg" type="button" @onclick="@ClickEvents[0]">Process</button>
		<button class="btn btn-primary btn-lg" type="button" @onclick="@ClickEvents[1]">API Reference</button>
	</div>
</BrandedBorder>

@code {
	public string Input { get; set; } = "Miriam";
	public int Source { get; set; } = 1;
    public string Target { get; set; } = "a";
    public bool Errored { get; set; } = false;
    public string ErrorReason { get; set; } = "";
	public string Result { get; set; }
	public EventCallback[] ClickEvents => [
		EventCallback.Factory.Create(this, ProcessInput),
		EventCallback.Factory.Create(this, new Action(() => NavManager.NavigateTo("https://aptivi.github.io/Textify/api/Textify.General.TextTools.html#Textify_General_TextTools_ReplaceChar_System_String_System_Int32_System_Char_"))),
	];

	public void ProcessInput()
    {
        try
        {
            Errored = false;
            if (Target.Length == 0)
            {
                Result = "Enter a character for the target replacement. Note that only the first char is taken.";
                return;
            }
            if (Source >= Input.Length || Source < 0)
            {
                Result = $"Source replacement index is invalid. You've entered {Source} while max index is {Input.Length - 1}.";
                return;
            }
            char targetChar = Target[0];
            Result = $"{(Input ?? "").ReplaceChar(Source, targetChar)}";
        }
        catch (Exception ex)
        {
            Errored = true;
            ErrorReason = ex.Message;
        }
	}
}
