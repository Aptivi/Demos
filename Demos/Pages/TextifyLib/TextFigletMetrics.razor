@page "/text/figlet/metrics"

<PageTitle>Textify - Figlet - Metrics - Aptivi Project Demos</PageTitle>

@using System.Threading;
@using System.Net;
@using System.Text;
@using System.IO
@using System.Text.Json
@using Demos.Data
@using Textify.Data.Figlet
@using Textify.Data.Figlet.Utilities.Lines
@inject NavigationManager NavManager

<Hero Title="Textify - Figlet - Metrics">
	You can demonstrate a feature from Textify where we showcase the text casing feature,
	and we provide the API documentation here for future reference. This demonstrates the
	"Get figlet metric information" feature.
</Hero>
<BrandedBorder>
	<p>Enter some text: <InputText @bind-Value="Input"></InputText></p>
	<p>Max figlet width: <InputNumber @bind-Value="Width"></InputNumber></p>
	<p>Use figlet font: <InputSelect @bind-Value="FigletFontName">
			@foreach (string fontName in FigletFontNames)
			{
				<option value="@fontName">@fontName</option>
			}
		</InputSelect></p>
	<p>Result from <code>GetFigletHeight()</code>: @ResultHeight</p>
	<p>Result from <code>GetFigletWidth()</code>: @ResultWidth</p>
	<p>Figlet font name: @ResultName</p>
	<p>Figlet baseline and height: @ResultBaseline | @ResultBaseHeight</p>
	<p>Figlet direction: @ResultDirection</p>
	<p>Figlet font comments</p>
	@if (ResultComments is not null)
	{
		string commentsString = string.Join("\n", ResultComments);
		<pre>@commentsString</pre>
	}
	<div class="d-grid gap-2 d-sm-flex">
		<button class="btn btn-primary btn-lg" type="button" @onclick="@ClickEvents[0]">Render</button>
		<button class="btn btn-primary btn-lg" type="button" @onclick="@ClickEvents[1]">API Reference</button>
		<button class="btn btn-primary btn-lg" type="button" @onclick="@ClickEvents[2]">API Reference</button>
	</div>
</BrandedBorder>

@code {
	public string[] FigletFontNames = FigletTools.GetFigletFonts().Keys.ToArray();
	public string Input { get; set; } = "Terminaux is powerful!";
	public int Width { get; set; } = 0;
	public string FigletFontName { get; set; } = "small";
	public int ResultHeight { get; set; }
	public int ResultWidth { get; set; }
	public string ResultName { get; set; }
	public int ResultBaseline { get; set; }
	public FigletTextDirection ResultDirection { get; set; }
	public int ResultBaseHeight { get; set; }
	public string[] ResultComments { get; set; }
	public EventCallback[] ClickEvents => [
		EventCallback.Factory.Create(this, ProcessInput),
		EventCallback.Factory.Create(this, new Action(() => NavManager.NavigateTo("https://aptivi.github.io/Textify/api/Textify.Data.Figlet.FigletTools.html#Textify_Data_Figlet_FigletTools_GetFigletHeight_System_String_Textify_Data_Figlet_Utilities_Lines_FigletFont_System_Int32_"))),
		EventCallback.Factory.Create(this, new Action(() => NavManager.NavigateTo("https://aptivi.github.io/Textify/api/Textify.Data.Figlet.FigletTools.html#Textify_Data_Figlet_FigletTools_GetFigletWidth_System_String_Textify_Data_Figlet_Utilities_Lines_FigletFont_System_Int32_"))),
	];

	public void ProcessInput()
	{
		var figletFont = FigletTools.GetFigletFont(FigletFontName);
		ResultHeight = FigletTools.GetFigletHeight(Input ?? "", figletFont, Width);
		ResultWidth = FigletTools.GetFigletWidth(Input ?? "", figletFont, Width);
		ResultName = figletFont.Name;
		ResultBaseline = figletFont.Baseline;
		ResultDirection = figletFont.Direction;
		ResultBaseHeight = figletFont.Height;
		ResultComments = figletFont.Comments;
	}
}
