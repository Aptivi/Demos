@page "/text/manipulation/replaceoccurrence"

<PageTitle>Textify - Manipulation - Replace Occurrence - Aptivi Project Demos</PageTitle>

@using System.Threading;
@using System.Net;
@using System.Text;
@using System.IO
@using System.Text.Json
@using Demos.Data
@using Textify.General
@inject IJSRuntime JSRuntime;

<Hero Title="Textify - Manipulation - Replace Occurrence">
	You can demonstrate a feature from Textify where we showcase the text casing feature,
	and we provide the API documentation here for future reference. This demonstrates the
	"Replace Occurrence" feature.
</Hero>
<BrandedBorder>
	<div class="mb-3">
		<label class="form-label">Enter some text:</label>
		<InputText class="form-control" @bind-Value="Input"></InputText>
	</div>
	<div class="mb-3">
		<label class="form-label">Enter replacement source:</label>
		<InputText class="form-control" @bind-Value="Source"></InputText>
	</div>
	<div class="mb-3">
		<label class="form-label">Enter replacement target:</label>
		<InputText class="form-control" @bind-Value="Target"></InputText>
	</div>
	<div class="mb-3">
		<label class="form-label">Enter occurrence index (from zero): <InputNumber class="form-control" @bind-Value="OccurrenceIdx"></InputNumber></label>
	</div>
	<p>Result from <code>ReplaceOccurrence()</code>: @Result</p>
    @if (Errored)
    {
        <p>Error obtaining results: @ErrorReason</p>
    }
	<div class="d-grid gap-2 d-sm-flex">
		<button class="btn btn-primary btn-lg" type="button" @onclick="@ClickEvents[0]">Process</button>
		<button class="btn btn-primary btn-lg" type="button" @onclick="@ClickEvents[1]">API Reference</button>
	</div>
</BrandedBorder>

@code {
	public string Input { get; set; } = "And here, we have with us Steve, Timothy, Thomas, John, Zack, Louise, Louise, and Louise.";
	public string Source { get; set; } = "Louise";
	public string Target { get; set; } = "Bruce";
    public int OccurrenceIdx { get; set; } = 0;
    public bool Errored { get; set; } = false;
    public string ErrorReason { get; set; } = "";
	public string Result { get; set; }
	public EventCallback[] ClickEvents => [
		EventCallback.Factory.Create(this, ProcessInput),
		EventCallback.Factory.Create(this, new Action(async () => await JSRuntime.InvokeVoidAsync("open", "https://aptivi.github.io/Textify/api/Textify.General.TextTools.html#Textify_General_TextTools_ReplaceOccurrence_System_String_System_String_System_String_System_Int32_", "_blank"))),
	];

	public void ProcessInput()
    {
        try
        {
            Errored = false;
            Result = $"{(Input ?? "").ReplaceOccurrence(Source, Target, OccurrenceIdx)}";
        }
        catch (Exception ex)
        {
            Errored = true;
            ErrorReason = ex.Message;
        }
	}
}
