@page "/text/manipulation/replaceallrange"

<PageTitle>Textify - Manipulation - Replace All Range - Aptivi Project Demos</PageTitle>

@using System.Threading;
@using System.Net;
@using System.Text;
@using System.IO
@using System.Text.Json
@using Demos.Data
@using Textify.General
@inject NavigationManager NavManager

<Hero Title="Textify - Manipulation - Replace All Range">
	You can demonstrate a feature from Textify where we showcase the text casing feature,
	and we provide the API documentation here for future reference. This demonstrates the
	"Replace All Range" feature.
</Hero>
<BrandedBorder>
	<div class="mb-3">
		<label class="form-label">Enter some text:</label>
		<InputText class="form-control" @bind-Value="Input"></InputText>
	</div>
	<div class="mb-3">
		<label class="form-label">Enter replacement source(s):</label>
		<InputText class="form-control" @bind-Value="Sources"></InputText>
	</div>
	<div class="mb-3">
		<label class="form-label">Enter replacement target(s):</label>
		<InputText class="form-control" @bind-Value="Targets"></InputText>
	</div>
	<p>Result from <code>ReplaceAllRange()</code>: @Result</p>
    @if (Errored)
    {
        <p>Error obtaining results: @ErrorReason</p>
    }
	<div class="d-grid gap-2 d-sm-flex">
		<button class="btn btn-primary btn-lg" type="button" @onclick="@ClickEvents[0]">Process</button>
		<button class="btn btn-primary btn-lg" type="button" @onclick="@ClickEvents[1]">API Reference</button>
	</div>
</BrandedBorder>

@code {
	public string Input { get; set; } = "Whatever, it is bad, ugly, and insufferable!";
	public string Sources { get; set; } = "bad|ugly|insufferable";
    public string Targets { get; set; } = "awesome|attractive|gorgeous";
    public bool Errored { get; set; } = false;
    public string ErrorReason { get; set; } = "";
	public string Result { get; set; }
	public EventCallback[] ClickEvents => [
		EventCallback.Factory.Create(this, ProcessInput),
		EventCallback.Factory.Create(this, new Action(() => NavManager.NavigateTo("https://aptivi.github.io/Textify/api/Textify.General.TextTools.html#Textify_General_TextTools_ReplaceAllRange_System_String_System_String___System_String___"))),
	];

	public void ProcessInput()
    {
        try
        {
            Errored = false;
            string[] sources = Sources.Split("|");
            string[] targets = Targets.Split("|");
            if (sources.Length == targets.Length)
                Result = $"{(Input ?? "").ReplaceAllRange(sources, targets)}";
            else
                Result = $"Source and target strings need to be at the same length when split (S: {sources.Length}, T: {targets.Length})";
        }
        catch (Exception ex)
        {
            Errored = true;
            ErrorReason = ex.Message;
        }
	}
}
