@page "/text/version/compare"

<PageTitle>Textify - Versioning - Comparison - Aptivi Project Demos</PageTitle>

@using System.Threading;
@using System.Net;
@using System.Text;
@using System.IO
@using System.Text.Json
@using Demos.Data
@using System.Text.RegularExpressions
@using Textify.Versioning
@inject NavigationManager NavManager

<Hero Title="Textify - Versioning - Comparison">
	You can demonstrate a feature from Textify where we showcase the text casing feature,
	and we provide the API documentation here for future reference. This demonstrates the
	"Compare two versions" feature.
</Hero>
<BrandedBorder>
	<p>Enter a source version: <InputText @bind-Value="Source"></InputText></p>
	<p>Enter a target version: <InputText @bind-Value="Target"></InputText></p>
	<p>Result from <code>CompareTo()</code>: @State [@(State == 0 ? "Equal" : State == 1 ? $"Source {Source} is newer" : $"Target {Target} is newer")]</p>
	@if (SourceResult is not null && TargetResult is not null)
	{
		<table class="table">
			<thead>
				<tr>
					<th scope="col">Major</th>
					<th scope="col">Minor</th>
					<th scope="col">Patch</th>
					<th scope="col">Revision</th>
					<th scope="col">Special</th>
					<th scope="col">PR Info</th>
					<th scope="col">Build Metadata</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>@SourceResult.MajorVersion</td>
					<td>@SourceResult.MinorVersion</td>
					<td>@SourceResult.PatchVersion</td>
					<td>@SourceResult.RevisionVersion</td>
					<td>@SourceResult.SpecialVersion</td>
					<td>@SourceResult.PreReleaseInfo</td>
					<td>@SourceResult.BuildMetadata</td>
				</tr>
			</tbody>
			<tbody>
				<tr>
					<td>@TargetResult.MajorVersion</td>
					<td>@TargetResult.MinorVersion</td>
					<td>@TargetResult.PatchVersion</td>
					<td>@TargetResult.RevisionVersion</td>
					<td>@TargetResult.SpecialVersion</td>
					<td>@TargetResult.PreReleaseInfo</td>
					<td>@TargetResult.BuildMetadata</td>
				</tr>
			</tbody>
		</table>
    }
    else if (Errored)
    {
        <p>Error obtaining results: @ErrorReason</p>
    }
	<div class="d-grid gap-2 d-sm-flex">
		<button class="btn btn-primary btn-lg" type="button" @onclick="@ClickEvents[0]">Parse</button>
		<button class="btn btn-primary btn-lg" type="button" @onclick="@ClickEvents[1]">API Reference</button>
	</div>
</BrandedBorder>

@code {
	public string Source { get; set; } = "0.1.0.1-alpha+b28a7d01";
    public string Target { get; set; } = "0.1.0.2";
    public bool Errored { get; set; } = false;
    public string ErrorReason { get; set; } = "";
	public SemVer SourceResult { get; set; }
	public SemVer TargetResult { get; set; }
	public int State { get; set; } = 0;
	public EventCallback[] ClickEvents => [
		EventCallback.Factory.Create(this, ProcessInput),
		EventCallback.Factory.Create(this, new Action(() => NavManager.NavigateTo("https://aptivi.github.io/Textify/api/Textify.Versioning.SemVer.html#Textify_Versioning_SemVer_Parse_System_String_"))),
	];

	public void ProcessInput()
    {
        try
        {
            Errored = false;
            SourceResult = SemVer.Parse(Source);
            TargetResult = SemVer.Parse(Target);
            State = SourceResult.CompareTo(TargetResult);
        }
        catch (Exception ex)
        {
            Errored = true;
            ErrorReason = ex.Message;
        }
	}
}
