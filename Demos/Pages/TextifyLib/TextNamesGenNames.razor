@page "/text/names/gen"

<PageTitle>Textify - Names - Generate Names - Aptivi Project Demos</PageTitle>

@using System.Threading;
@using System.Net;
@using System.Text;
@using System.IO
@using System.Text.Json
@using Demos.Data
@using Textify.Data.NameGen
@using Textify.General
@inject IJSRuntime JSRuntime;

<Hero Title="Textify - Names - Generate Names">
	You can demonstrate a feature from Textify where we showcase the text casing feature,
	and we provide the API documentation here for future reference. This demonstrates the
	"Generate the names" feature.
</Hero>
<BrandedBorder>
	<div class="mb-3">
		<label class="form-label">Enter number of names: <InputNumber class="form-control" @bind-Value="NameCount"></InputNumber></label>
	</div>
	<p>
		Gender: <InputSelect @bind-Value="Gender">
			@foreach (var gender in Genders)
			{
				<option value="@gender">@gender</option>
			}
		</InputSelect>
	</p>
	<label><InputCheckbox class="form-check-input" @bind-Value="CheckPrefixesSuffixes"></InputCheckbox> Also check prefixes and suffixes</label>
	<div class="mb-3">
		<label class="form-label">Enter some prefix:</label>
		<InputText class="form-control" @bind-Value="Prefix" hidden="@(!CheckPrefixesSuffixes)"></InputText>
	</div>
	<div class="mb-3">
		<label class="form-label">Enter some suffix:</label>
		<InputText class="form-control" @bind-Value="Suffix" hidden="@(!CheckPrefixesSuffixes)"></InputText>
	</div>
	<p>Results from <code>GenerateNames()</code></p>
	@if (Results is not null)
	{
		<table class="table">
			<thead>
				<tr>
					<th scope="col">First name</th>
					<th scope="col">Length</th>
					<th scope="col">Index</th>
				</tr>
			</thead>
			<tbody>
				@for (int i = 0; i < Results.Length; i++)
				{
					string result = Results[i];
					<tr>
						<td>@result</td>
						<td>@result.Length</td>
						<td>@i</td>
					</tr>
				}
			</tbody>
		</table>
    }
    else if (Errored)
    {
        <p>Error obtaining results: @ErrorReason</p>
    }
	<div class="d-grid gap-2 d-sm-flex">
		<button class="btn btn-primary btn-lg" type="button" @onclick="@ClickEvents[0]">Generate</button>
		<button class="btn btn-primary btn-lg" type="button" @onclick="@ClickEvents[1]">API Reference</button>
		<button class="btn btn-primary btn-lg" type="button" @onclick="@ClickEvents[2]">API Reference</button>
	</div>
</BrandedBorder>

@code {
	public NameGenderType[] Genders = Enum.GetValues<NameGenderType>();
	public int NameCount { get; set; } = 10;
	public NameGenderType Gender { get; set; } = NameGenderType.Unified;
	public bool CheckPrefixesSuffixes { get; set; } = false;
	public string Prefix { get; set; } = "";
	public string Suffix { get; set; } = "";
	public string SurnamePrefix { get; set; } = "";
    public string SurnameSuffix { get; set; } = "";
    public bool Errored { get; set; } = false;
    public string ErrorReason { get; set; } = "";
	public string[] Results { get; set; }
	public EventCallback[] ClickEvents => [
		EventCallback.Factory.Create(this, ProcessInput),
		EventCallback.Factory.Create(this, new Action(async () => await JSRuntime.InvokeVoidAsync("open", "https://aptivi.github.io/Textify/api/Textify.Data.NameGen.NameGenerator.html#Textify_Data_NameGen_NameGenerator_GenerateNames_System_Int32_System_String_System_String_System_String_System_String_Textify_Data_NameGen_NameGenderType_", "_blank"))),
		EventCallback.Factory.Create(this, new Action(async () => await JSRuntime.InvokeVoidAsync("open", "https://aptivi.github.io/Textify/api/Textify.Data.NameGen.NameGenerator.html#Textify_Data_NameGen_NameGenerator_GenerateNames_System_Int32_Textify_Data_NameGen_NameGenderType_", "_blank"))),
	];

	public void ProcessInput()
    {
        try
        {
            Errored = false;
            Results =
                CheckPrefixesSuffixes ?
                NameGenerator.GenerateNames(NameCount, Prefix, Suffix, SurnamePrefix, SurnameSuffix, Gender) :
                NameGenerator.GenerateNames(NameCount, Gender);
        }
        catch (Exception ex)
        {
            Errored = true;
            ErrorReason = ex.Message;
        }
	}
}
