@page "/text/names/findlast"

<PageTitle>Textify - Names - Find Last Names - Aptivi Project Demos</PageTitle>

@using System.Threading;
@using System.Net;
@using System.Text;
@using System.IO
@using System.Text.Json
@using Demos.Data
@using Textify.Data.NameGen
@using Textify.General
@inject NavigationManager NavManager

<Hero Title="Textify - Names - Find Last Names">
	You can demonstrate a feature from Textify where we showcase the text casing feature,
	and we provide the API documentation here for future reference. This demonstrates the
	"Search the last names" feature.
</Hero>
<BrandedBorder>
	<div class="mb-3">
		<label class="form-label">Enter a search term:</label>
		<InputText class="form-control" @bind-Value="Input"></InputText>
	</div>
	<label><InputCheckbox @bind-Value="CheckPrefixesSuffixes"></InputCheckbox> Also check prefixes and suffixes</label>
	<div class="mb-3">
		<label class="form-label">Enter some prefix:</label>
		<InputText class="form-control" @bind-Value="Prefix" hidden="@(!CheckPrefixesSuffixes)"></InputText>
	</div>
	<div class="mb-3">
		<label class="form-label">Enter some suffix:</label>
		<InputText class="form-control" @bind-Value="Suffix" hidden="@(!CheckPrefixesSuffixes)"></InputText>
	</div>
	<p>Results from <code>FindLastNames()</code></p>
	@if (Results is not null)
	{
		<table class="table">
			<thead>
				<tr>
					<th scope="col">First name</th>
					<th scope="col">Length</th>
					<th scope="col">Index</th>
				</tr>
			</thead>
			<tbody>
				@for (int i = 0; i < Results.Length; i++)
				{
					string result = Results[i];
					<tr>
						<td>@result</td>
						<td>@result.Length</td>
						<td>@i</td>
					</tr>
				}
			</tbody>
		</table>
    }
    else if (Errored)
    {
        <p>Error obtaining results: @ErrorReason</p>
    }
	<div class="d-grid gap-2 d-sm-flex">
		<button class="btn btn-primary btn-lg" type="button" @onclick="@ClickEvents[0]">Find</button>
		<button class="btn btn-primary btn-lg" type="button" @onclick="@ClickEvents[1]">API Reference</button>
		<button class="btn btn-primary btn-lg" type="button" @onclick="@ClickEvents[2]">API Reference</button>
	</div>
</BrandedBorder>

@code {
	public string Input { get; set; } = "";
	public bool CheckPrefixesSuffixes { get; set; } = false;
	public string Prefix { get; set; } = "";
    public string Suffix { get; set; } = "";
    public bool Errored { get; set; } = false;
    public string ErrorReason { get; set; } = "";
	public string[] Results { get; set; }
	public EventCallback[] ClickEvents => [
		EventCallback.Factory.Create(this, ProcessInput),
		EventCallback.Factory.Create(this, new Action(() => NavManager.NavigateTo("https://aptivi.github.io/Textify/api/Textify.Data.NameGen.NameGenerator.html#Textify_Data_NameGen_NameGenerator_FindLastNames_System_String_"))),
		EventCallback.Factory.Create(this, new Action(() => NavManager.NavigateTo("https://aptivi.github.io/Textify/api/Textify.Data.NameGen.NameGenerator.html#Textify_Data_NameGen_NameGenerator_FindLastNames_System_String_System_String_System_String_"))),
	];

	public void ProcessInput()
    {
        try
        {
            Errored = false;
            Results =
                CheckPrefixesSuffixes ?
                NameGenerator.FindLastNames(Input, Prefix, Suffix) :
                NameGenerator.FindLastNames(Input);
        }
        catch (Exception ex)
        {
            Errored = true;
            ErrorReason = ex.Message;
        }
	}
}
