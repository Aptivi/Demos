@page "/text/prefixes/addsuffix"

<PageTitle>Textify - Prefixes and Suffixes - Suffix Addition - Aptivi Project Demos</PageTitle>

@using System.Threading;
@using System.Net;
@using System.Text;
@using System.IO
@using System.Text.Json
@using Demos.Data
@using Textify.General
@inject NavigationManager NavManager

<Hero Title="Textify - Prefixes and Suffixes - Suffix Addition">
	You can demonstrate a feature from Textify where we showcase the text casing feature,
	and we provide the API documentation here for future reference. This demonstrates the
	"Add suffix" feature.
</Hero>
<BrandedBorder>
	<p>Enter some text: <InputText @bind-Value="Input"></InputText></p>
	<p>Enter some suffix: <InputText @bind-Value="Suffix"></InputText></p>
	<label><InputCheckbox @bind-Value="Verify"></InputCheckbox> Verify the suffix</label>
	<p>Result from <code>AddSuffix()</code>: @Result</p>
	<div class="d-grid gap-2 d-sm-flex">
		<button class="btn btn-primary btn-lg" type="button" @onclick="@ClickEvents[0]">Add suffix</button>
		<button class="btn btn-primary btn-lg" type="button" @onclick="@ClickEvents[1]">API Reference</button>
	</div>
</BrandedBorder>

@code {
	public string Input { get; set; } = "Hello world!";
	public string Suffix { get; set; } = " How's things?";
	public bool Verify { get; set; } = true;
	public string Result { get; set; }
	public EventCallback[] ClickEvents => [
		EventCallback.Factory.Create(this, ProcessInput),
		EventCallback.Factory.Create(this, new Action(() => NavManager.NavigateTo("https://aptivi.github.io/Textify/api/Textify.General.TextTools.html#Textify_General_TextTools_AddSuffix_System_String_System_String_System_Boolean_"))),
	];

	public void ProcessInput()
	{
		Result = (Input ?? "").AddSuffix(Suffix, Verify);
	}
}
