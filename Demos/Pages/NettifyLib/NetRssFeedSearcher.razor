@page "/net/rss/search"

<PageTitle>Textify - RSS - RSS feed searcher - Aptivi Project Demos</PageTitle>

@using System.Threading;
@using System.Net;
@using System.Text;
@using System.IO
@using System.Text.Json
@using Demos.Data
@using Nettify.MailAddress
@using Nettify.MailAddress.IspInfo
@using Nettify.Rss.Searcher
@using Textify.Accessibility
@using Textify.Data.Unicode
@inject NavigationManager NavManager

<Hero Title="Textify - RSS - RSS feed searcher">
	You can demonstrate a feature from Nettify where we showcase this feature,
	and we provide the API documentation here for future reference. This demonstrates the
	"Search your RSS feed" feature.
</Hero>
<BrandedBorder>
	<p>Enter search term: <InputText @bind-Value="Input"></InputText></p>
	<p>Result from <code>GetRssFeedsAsync()</code></p>
	@if (Result is not null)
	{
		<ul>
			@foreach (var instance in Result)
			{
				<p>Title: @instance.Title</p>
				<p>URL: @instance.Website [<a href="@instance.Website">Visit</a>]</p>
				<p>Description: @instance.Description</p>
			}
		</ul>
    }
    else if (Errored)
    {
        <p>Error obtaining results: @ErrorReason</p>
    }
	<div class="d-grid gap-2 d-sm-flex">
		<button class="btn btn-primary btn-lg" type="button" @onclick="@ClickEvents[0]">Search</button>
		<button class="btn btn-primary btn-lg" type="button" @onclick="@ClickEvents[1]">API Reference</button>
	</div>
</BrandedBorder>

@code {
    public string Input { get; set; } = "Linux";
    public bool Errored { get; set; } = false;
    public string ErrorReason { get; set; } = "";
	public SearcherInstance[] Result { get; set; }
	public EventCallback[] ClickEvents => [
		EventCallback.Factory.Create(this, ProcessInput),
		EventCallback.Factory.Create(this, new Action(() => NavManager.NavigateTo("https://aptivi.github.io/Nettify/api/Nettify.Rss.Searcher.SearcherTools.html#Nettify_Rss_Searcher_SearcherTools_GetRssFeedsAsync_System_String_System_Int32_"))),
	];

	public async Task ProcessInput()
    {
        try
        {
            Errored = false;
            Result = await SearcherTools.GetRssFeedsAsync(Input);
        }
        catch (Exception ex)
        {
            Errored = true;
            ErrorReason = ex.Message;
        }
	}
}
